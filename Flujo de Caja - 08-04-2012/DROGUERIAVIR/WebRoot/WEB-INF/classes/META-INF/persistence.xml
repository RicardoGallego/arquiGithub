<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
    
	<persistence-unit name="DROGUERIAVIRPU"
		transaction-type="RESOURCE_LOCAL">
		<provider>
			oracle.toplink.essentials.PersistenceProvider
		</provider>
		<class>persistencia.Medicament</class>
		<class>persistencia.Gestionmedicammento</class>
		<class>persistencia.Tienne</class>
		<properties>
			<property name="toplink.jdbc.driver"
				value="org.apache.derby.jdbc.ClientDriver" />
			<property name="toplink.jdbc.url"
				value="jdbc:derby://localhost:1527/myeclipse" />
			<property name="toplink.jdbc.user" value="classiccars" />
			<property name="toplink.jdbc.password" value="myeclipse" />
		</properties>
	</persistence-unit>

</persistence>
